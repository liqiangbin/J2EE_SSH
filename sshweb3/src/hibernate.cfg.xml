<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

<session-factory>
	<property name="connection.url">jdbc:mysql://localhost:3306/support</property>
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
	<property name="connection.username">root</property>
	<property name="connection.password">123456</property>
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="myeclipse.connection.profile">mysql</property>
	<mapping resource="shiep/bean/Customer.hbm.xml" />
	<mapping resource="shiep/bean/Departmenthead.hbm.xml" />
	<mapping resource="shiep/bean/Announce.hbm.xml" />
	<mapping resource="shiep/bean/Matchmessage.hbm.xml" />
	<mapping resource="shiep/bean/Teacher.hbm.xml" />
	<mapping resource="shiep/bean/Courseoutline.hbm.xml" />
	<mapping resource="shiep/bean/Super.hbm.xml" />
	<mapping resource="shiep/bean/Course.hbm.xml" />
	<mapping resource="shiep/bean/Courseopen.hbm.xml" />
	<mapping resource="shiep/bean/Teachingprogress.hbm.xml" />
	<mapping resource="shiep/bean/Testprogress.hbm.xml" />
	<mapping resource="shiep/bean/Sortprogress.hbm.xml" />
	<mapping resource="shiep/bean/Term.hbm.xml" />
	
</session-factory>
</hibernate-configuration>